* {
    border: none;
    padding: 0;
    margin: 0;
    text-decoration: none;
    font-family: sans-serif;
}

body {
    z-index: 0;

    width: 100%;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
}

    .centerAN {
        position: absolute;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .actualNumber {
        width: 12.69%;
        height: 23%;
        display: flex;
        justify-content: center;
        align-items: center;

        font-size: 18vmin;
        font-weight: bolder;

        background: white;
    }

    .center {
        width: 90%;
        height: 90%;
        display: flex;
        flex-wrap: wrap;

        background: lightgray;
    }

        .title {
            width: 100%;
            height: 27%;

            display: flex;
            justify-content: center;
            align-items: center;

            background: tomato;
            color: white;
            font-size: 18vmin;
            font-weight: bolder;

	    h1 {
  display: inline-block;
  color: white;
  font-family: 'Righteous', serif;
  font-size: 12em; 
  text-shadow: .03em .03em 0 hsla(230,40%,50%,1);
  }
  h1:after {
    content: attr(data-shadow);
    position: absolute;
    top: .06em; left: .06em;
    z-index: -1;
    text-shadow: none;
    background-image:
      linear-gradient(
        45deg,
        transparent 45%,
        hsla(48,20%,90%,1) 45%,
        hsla(48,20%,90%,1) 55%,
        transparent 0
        );
    background-size: .05em .05em;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  
    animation: shad-anim 15s linear infinite;
    }

@keyframes shad-anim {
  0% {background-position: 0 0}
  0% {background-position: 100% -100%}
        }

        .visor {
            width: 100%;
            height: 73%;

            display: flex;
            justify-content: space-around;
            align-items: center;
        }

            .sideVisor {
                width: 36%;
                height: 72%;

                display: flex;
                justify-content: center;
                align-items: center;

                font-size: 27vmin;
                font-weight: bold;
            }

            #leftVisor {
                border-radius: 12px 0 0 0 ;
                background: rgb(255, 255, 166);
            }

            #rightVisor {
                border-radius: 0 0 12px 0;
                background: rgb(134, 200, 255);
            }

                .name {
                    width: 20%;
                    height: 9%;

                    display: flex;
                    justify-content: center;
                    align-items: center;
                    position: absolute;

                    border-radius: 12px;
                    color: white;
                    font-size: 7.2vmin;
                    font-weight: bolder;
                }

                #player {
                    left: 11.25%;
                    top: 38.5%;
                    background: rgb(255, 255, 0);
                }

                #robot {
                    right: 11.25%;
                    bottom: 14.25%;
                    background: steelblue;
                }
